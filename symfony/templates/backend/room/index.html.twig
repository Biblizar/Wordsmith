{% extends 'backend/basebackend.html.twig' %}

{% block title %}Room index{% endblock %}

{% block main %}
    <h1 class="mb-3 mt-3">Liste des rooms</h1>
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Code</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr class="table-light">
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.code }}</td>
                <td>
                     {{ include('backend/room/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Vous n'avez pas encore cr√©e de routes </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
