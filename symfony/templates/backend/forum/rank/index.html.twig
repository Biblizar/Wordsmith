{% extends 'backend/basebackend.html.twig' %}

{% block title %}Rank index{% endblock %}

{% block main %}
    <h1 class="mb-3 mt-3">Liste des rangs</h1>
         {{ include('backend/forum/rank/_form.html.twig') }}

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rank in ranks %}
            <tr class="table-light">
                <td>{{ rank.id }}</td>
                <td>{{ rank.name }}</td>
                <td>
                    <a title="Editer le rang" class="btn btn-primary" href="{{ path('backend_rank_edit', {'id': rank.id}) }}"><i class="fas fa-edit"></i></a>
                     {{ include('backend/forum/rank/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Vous n'avez pas encore cr√©e de rang</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
