{% extends 'backend/basebackend.html.twig' %}

{% block title %}Group index{% endblock %}

{% block main %}
    <h1 class="mb-3 mt-3">Liste des groupes</h1>
        {{ include('backend/forum/group/_form.html.twig') }}

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Couleur</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr class="table-light">
                <td>{{ group.id }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.color }}</td>
                <td>
                    <a title="Editer le groupe" class="btn btn-primary" href="{{ path('backend_group_edit', {'id': group.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('backend/forum/group/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Vous n'avez pas encore créé de groupe</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
