{% extends 'backend/basebackend.html.twig' %}

{% block title %}Liste des sous-catégories{% endblock %}

{% block main %}
    <h1 class="mt-3 mb-3">Liste des sous-catégories</h1>
    <a class="btn btn-success mb-2" href="{{ path('subcategory_new') }}">Créer une sous-catégorie</a>

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subcategory in subcategories %}
            <tr>
                <td>{{ subcategory.id }}</td>
                <td>{{ subcategory.name }}</td>
                <td>{{ subcategory.category.name }}</td>
                <td>
                    <a title="Modifier la sous-catégorie" class="btn btn-info" href="{{ path('subcategory_edit', {'id': subcategory.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('backend/forum/subcategory/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Vous n'avez crée aucune sous-catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
