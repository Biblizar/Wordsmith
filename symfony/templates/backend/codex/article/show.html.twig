{% extends 'backend/basebackend.html.twig' %}

{% block title %}Article{% endblock %}

{% block main %}
    <a class="btn btn-primary mb-2 mt-2" href="{{ path('backend_article_index') }}">Retour</a>
    <h1>{{ article.title }}</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>DateInserted</th>
                <td>{{ article.dateInserted ? article.dateInserted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ article.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('backend_article_edit', {'id': article.id}) }}">Editer l'article</a>
{% endblock %}