{% extends 'backend/basebackend.html.twig' %}

{% block title %}Article index{% endblock %}

{% block main %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>DateInserted</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.dateInserted ? article.dateInserted|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.status ? 'Visible' : 'Non visible' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('backend_article_show', {'id': article.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('backend_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_article_new') }}">Create new</a>
{% endblock %}