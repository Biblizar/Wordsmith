{% extends 'backend/basebackend.html.twig' %}

{% block title %}Article index{% endblock %}

{% block main %}
    <h1>Liste des articles</h1>
    <a class="btn btn-success mb-2" href="{{ path('backend_article_new') }}">Cr√©er un nouvel article</a>
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre de l'article</th>
                <th>Date de publication</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.dateInserted ? article.dateInserted|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.status ? 'Visible' : 'Non visible' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('backend_article_show', {'id': article.id}) }}">Voir l'article</a>
                    <a class="btn btn-primary" href="{{ path('backend_article_edit', {'id': article.id}) }}">Editer l'article</a>
                    {% if article.status == true %}
                        <a class="btn btn-warning" href="{{ path('backend_article_hide', {'id': article.id}) }}">Masquer l'article</a>
                    {% else %}
                        <a class="btn btn-success" href="{{ path('backend_article_hide', {'id': article.id}) }}">Afficher l'article</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}