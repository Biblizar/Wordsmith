<form method="post" action="{{ path('backend_tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="btn-delete">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button title="Supprimer le tag" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
</form>