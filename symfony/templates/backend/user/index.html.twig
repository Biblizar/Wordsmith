{% extends 'backend/basebackend.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block main %}
        <div>
            {{ form_start(form, {'action': path('back_search_user'), 'method': 'POST'}) }} {{ form_row(form.username) }}
            <button type="submit" class="btn btn-success">
                <i class="fas fa-search"></i>
            </button>
            {{ form_end(form) }}
        </div>
    <h1 class="mt-3 mb-3">Liste des utilisateurs</h1>

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actif</th>
                <th>Date d'inscription</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isActive ? 'Oui' : 'Non' }}</td>
                <td>{{ user.dateInserted ? user.dateInserted|date('d-m-Y') : '' }}</td>
                <td>{{ user.role.name }}</td>
                <td>
                    <a title="Afficher le profil de l'utilisateur" class="btn btn-info" href="{{ path('backend_user_show', {'id': user.id}) }}"><i class="fas fa-user"></i></a>
                    <a title="Modifier l'utilisateur" class="btn btn-primary" href="{{ path('backend_user_edit', {'id': user.id}) }}"><i class="fas fa-user-edit"></i></a>
                    {% if user.isActive == true %}
                        <a title="Désactiver l'utilisateur" class="btn btn-warning" href="{{ path('backend_user_hide', {'id': user.id}) }}"><i class="fas fa-minus-circle"></i></a>
                    {% else %}
                        <a title="Activer l'utilisateur" class="btn btn-success" href="{{ path('backend_user_hide', {'id': user.id}) }}"><i class="fas fa-thumbs-up"></i></a>
                    {% endif %}
                    {{ include('backend/user/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun utilisateur enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
