{% extends 'backend/basebackend.html.twig' %}


{% block title %}User{% endblock %}

{% block main %}
    <h1>User</h1>
    <a class="btn btn-primary mb-2" href="{{ path('backend_user_index') }}">Retour</a>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ user.isActive ? 'Actif' : 'Désactivé' }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date d'inscription</th>
                <td>{{ user.dateInserted ? user.dateInserted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    

    <a class="btn btn-success" href="{{ path('backend_user_edit', {'id': user.id}) }}">Editer l'utilisateur</a>

    {{ include('backend/user/_delete_form.html.twig') }}
{% endblock %}
