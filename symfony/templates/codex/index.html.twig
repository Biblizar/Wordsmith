{% extends 'base.html.twig' %}

{% block main %}
    <div class="wrapper"> 
    <h2>Sommaire</h2>
    <div class="container">
        <ol>
            {% for tag in tags %}
            <li>
                <a href="{{path('search_by_tags',{'id':tag.id})}}">{{tag.name}}</a>
            </li>
            {% endfor %}
        </ol>
    </div>
    <h2>Les dernières publications</h2>
    <div class="wrapper-codex">
     
        {% for article in articles %}
        <section class="container container-index">
            <div class="article-title">
                <h2><a class="article-link" href="{{ path('show',{'id':article.id}) }}">{{article.title}}</a></h2>
                <small>Publié le {{article.dateInserted|date("d/m/Y")}}</small>
            </div>
            <p class="preview">{{article.description}} <a href="{{ path('show',{'id':article.id}) }}">Lire la suite</a></p>
            <div class="tags">
            {% for tag in article.tags %}
                <a class="btn btn-tag" href="{{path('search_by_tags',{'id':tag.id})}}">{{tag.name}}</a>
            {% endfor %}
            </div>
        </section>
        {% endfor %}
        </div>
        <a href="{{path('codex')}}">Revenir à l'acceuil</a>
    </div>
{% endblock %}

