{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container mt-3">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    <h1>Se connecter</h1>
        {{ form_start(form, {'action': path('security_login'), 'method': 'POST'})  }}
        {{ form_row(form.username, { 'attr': {'name': '_username'} }) }}
        {{ form_row(form.password, { 'attr': {'name': '_password'} }) }}
        <button type="submit" class="btn btn-success">Inscription</button>
        {{ form_end(form) }}
    </div>
{% endblock %}