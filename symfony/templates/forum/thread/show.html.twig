{% extends 'base.html.twig' %}

{% block title %}Thread{% endblock %}

{% block main %}
<div class="wrapper">
    <div class="container container-forum">
        <div class="category-header">
            <h2>{{ thread.title }}</h2>
            <h3>{{ thread.subtitle }}</h3>
        </div>
        {% for post in thread.posts %}
        <div class="wrapper-flex">
            <div class="left-side">
                {{ post.author.username }}

            <div id="blocAVA">
                <div class="blocAVA">
                    <div class="avaPOST">
                        <img src="{{ post.author.characterProfile.avatar }}">
                    </div>
                    <div class="abtPOST">
                        <div>
                            contenu profil
                        </div>
                    </div>
                </div>
            </div>
                
            </div>
            <div class="right-side">
                <div class="container container-post">
                    <a href="{{path('post_edit', {'id' : post.id})}}">Editer</a>
                    {{ post.content|raw }}
                    {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}
                </div>
            </div>
        </div>
        {% endfor %}
        {% if is_granted('ROLE_MODERATOR') %}
            {{ form_start(form, {'action': path('thread_move', {'id' : thread.id }), 'method': 'POST'}) }}
            {{form_row(form.subcategory,{'label':false, 'id' : 'select' ~ thread.id })}}
                <button class="btn btn-success mb-2">{{ button_label|default('Modifier') }}</button>
            {{form_end(form)}}
        {% endif %}
    </div>
    <a href="{{path('post_new', {'thread_id' : thread.id})}}">RÃ©pondre</a>
</div>

{% endblock %}
