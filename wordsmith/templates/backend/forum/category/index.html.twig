{% extends 'backend/basebackend.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block main %}
    <div class="d-flex justify-content-between align-item align-items-center">  
        <h1 class="mb-3 mt-3">Liste des catégories</h1>
        <a class="btn btn-success mb-2" href="{{ path('category_new') }}">Créer une catégorie</a>
    </div>

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a title="Modifier la catégorie" class="btn btn-info" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('backend/forum/category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Vous n'avez crée aucune catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
