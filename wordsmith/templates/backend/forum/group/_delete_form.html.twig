<form method="post" action="{{ path('backend_group_delete', {'id': group.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');"class="btn-delete">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
</form>
